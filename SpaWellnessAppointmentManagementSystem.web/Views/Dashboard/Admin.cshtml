        :root {
            --spa-purple: #a855f7;
            --spa-pink: #db2777;
            --sidebar-width: 240px;
        }

        body {
            background-color: #fdf2f8;
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            color: #334155;
        }

        /* Sidebar Styling */
        .sidebar {
            min-height: 100vh;
            width: var(--sidebar-width);
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 20px;
            background: white;
            z-index: 1000;
            border-right: 1px solid #fce7f3;
        }

        .main-content {
            margin-left: var(--sidebar-width);
            padding: 30px;
        }

        .logo-container {
            padding: 0 25px 30px;
        }

        .logo-text {
            color: var(--spa-purple);
            font-weight: 700;
            font-size: 1.25rem;
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
        }

        .nav-link {
            color: #64748b;
            padding: 12px 25px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-weight: 500;
            transition: all 0.2s;
            cursor: pointer;
            text-decoration: none;
        }

            .nav-link:hover {
                color: var(--spa-purple);
                background: #fdf4ff;
            }

            .nav-link.active {
                background: linear-gradient(90deg, #db2777, #a855f7) !important;
                color: white !important;
                border-radius: 0 50px 50px 0;
                margin-right: 15px;
            }

        
        .navbar {
            margin-left: var(--sidebar-width);
            background: white !important;
            border-bottom: 1px solid #f1f5f9;
            padding: 15px 30px;
        }

        .admin-portal-title {
            color: var(--spa-pink);
            font-weight: 700;
            margin: 0;
        }

        
        .kpi-card {
            border-radius: 20px;
            border: none;
            overflow: hidden;
        }

        .bg-gradient-purple {
            background: linear-gradient(135deg, #a855f7, #ec4899);
        }

        .bg-gradient-blue {
            background: linear-gradient(135deg, #3b82f6, #2dd4bf);
        }

        .bg-gradient-green {
            background: linear-gradient(135deg, #10b981, #34d399);
        }

        .bg-gradient-orange {
            background: linear-gradient(135deg, #f97316, #fbbf24);
        }

        .stat-icon {
            background: rgba(255, 255, 255, 0.25);
            padding: 12px;
            border-radius: 12px;
            font-size: 1.4rem;
            display: inline-flex;
        }

        .trend-badge {
            background-color: white !important;
            color: #334155 !important;
            font-size: 0.75rem;
            font-weight: 700;
            padding: 4px 10px;
            border-radius: 8px;
        }

        .data-card {
            background: white;
            border-radius: 20px;
            border: none;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.05);
        }

        .status-badge-confirmed, .status-badge-available, .status-badge-success, .status-badge-active {
            background-color: #10b981;
            color: white;
            font-size: 0.7rem;
            font-weight: 700;
            padding: 6px 12px;
            border-radius: 6px;
            text-transform: uppercase;
        }

        .status-badge-busy, .status-badge-pending {
            background-color: #fbbf24;
            color: white;
            font-size: 0.7rem;
            font-weight: 700;
            padding: 6px 12px;
            border-radius: 6px;
            text-transform: uppercase;
        }

        .btn-add-service {
            background: linear-gradient(90deg, #db2777, #a855f7);
            color: white;
            border: none;
            border-radius: 10px;
            padding: 8px 20px;
            font-weight: 600;
        }

        .btn-action {
            border: 1px solid #f1f5f9;
            background: white;
            color: #64748b;
            padding: 5px 10px;
            border-radius: 8px;
        }

            .btn-action:hover {
                background: #fdf4ff;
                color: var(--spa-purple);
            }

        .btn-assign {
            color: #3b82f6;
            border: 1px solid #dbeafe;
            background: #eff6ff;
            font-size: 0.8rem;
            font-weight: 600;
            padding: 4px 8px;
            border-radius: 6px;
        }

        .btn-cancel {
            color: #ef4444;
            border: 1px solid #fee2e2;
            background: #fef2f2;
            font-size: 0.8rem;
            font-weight: 600;
            padding: 4px 8px;
            border-radius: 6px;
        }

        .staff-card {
            background: white;
            border-radius: 20px;
            border: none;
            text-align: center;
            padding: 30px;
            transition: transform 0.2s;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.05);
