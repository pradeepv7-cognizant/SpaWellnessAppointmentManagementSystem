    <!---Custom jQuery --->
    <script>
        $(document).ready(function () {
            var isLogin = true;

            // 1. Force the role group to be visible as soon as the page loads
            // This overrides the 'd-none' class in your HTML
            $('#roleGroup').removeClass('d-none').show();

            // Toggle between login and register
            $('#toggleAuth').click(function () {
                isLogin = !isLogin;

                if (isLogin) {
                    $('#authTitle').text('Welcome Back');
                    $('#authForm button[type="submit"]').text('Login');
                    $('#toggleAuth').text("Don't have an account? Sign up");
                    $('#usernameGroup').hide();

                    // Ensure roleGroup stays visible during login
                    $('#roleGroup').show();
                    $('#demoAccounts').show();
                } else {
                    $('#authTitle').text('Create Account');
                    $('#authForm button[type="submit"]').text('Create Account');
                    $('#toggleAuth').text('Already have an account? Login');
                    $('#usernameGroup').show();
                    $('#roleGroup').show();
                    $('#demoAccounts').hide();
                }
            });

            // Handle form submission
            $('#authForm').submit(function (e) {
                e.preventDefault();

                var email = $('#email').val();

                // 2. Capture the role from the dropdown (this works for both login and register now)
                var role = $('#role').val();

                var user = {
                    email: email,
                    role: role,
                    // Use double @@ here to escape Razor in .cshtml files
                    username: isLogin ? email.split('@@')[0] : $('#username').val()
                };

                // Store user info for the session
                localStorage.setItem('currentUser', JSON.stringify(user));

                // 3. Redirection logic based on the role selected in the dropdown
                if (role === 'ADMIN') {
                    window.location.href = '/Admin/Index';
                }
                else if (role === 'STAFF') {
                    window.location.href = '/Staff/Index';
                }
                else {
                    window.location.href = '/Customer/Profile';
                }
            });
        });
    </script>

